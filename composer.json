{
    "name": "dbu/dashboard",
    "description": "dashboard application to monitor issue trackers",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "symfony/symfony":                      "~2.5.0",
        "symfony/monolog-bundle":               "~2.6.0",
        "friendsofsymfony/elastica-bundle":     "~3.0.0",
        "incenteev/composer-parameter-handler": "~2.1.0",
        "friendsofsymfony/jsrouting-bundle":    "~1.5",
        "jms/serializer-bundle":                "~0.13",

        "digitalkaoz/issues-bundle" :           "~0.1"
    },
    "require-dev": {
        "raulfraile/ladybug-bundle":            "@stable",
        "sensio/generator-bundle":              "@stable"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "php app/console cache:clear --env=prod --no-debug",
            "php app/console assets:install --symlink --relative",
            "php app/console  fos:js-routing:dump",
            "npm install",
            "bower install",
            "gulp build"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "php app/console cache:clear --env=prod --no-debug",
            "php app/console assets:install --symlink --relative",
            "php app/console fos:js-routing:dump",
            "npm install",
            "bower install",
            "gulp build"
        ]
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "keep-outdated": false
        },
        "symfony-assets-install": "symlink"
    }

}
